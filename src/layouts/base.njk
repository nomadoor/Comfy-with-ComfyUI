{% set currentLang = lang | default(site.defaultLang) -%}
{% set localeNav = nav[currentLang] or nav[site.defaultLang] -%}
{% set sectionCandidate = section -%}
{% set sectionExists = false -%}
{% if sectionCandidate and localeNav -%}
  {% for item in localeNav.sections -%}
    {% if item.key == sectionCandidate -%}
      {% set sectionExists = true -%}
    {% endif -%}
  {% endfor -%}
{% endif -%}
{% set currentSection = sectionExists and sectionCandidate or (localeNav.sections[0].key if localeNav and localeNav.sections else site.sections[0].key) -%}
{% set currentNavId = navId | default(slug) -%}
<!DOCTYPE html>
<html lang="{{ currentLang }}">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }} | {{ site.name[currentLang] or site.name[site.defaultLang] }}</title>
  <meta name="description" content="{{ summary | default('Comfy with ComfyUI docs') }}" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Zen+Kaku+Gothic+New:wght@400;500;600&display=swap" />
  <link rel="stylesheet" href="/assets/css/site.css" />
  <link rel="icon" type="image/png" sizes="128x128" href="/assets/logos/favicon/favicon_128.png" />
  <link rel="icon" type="image/png" sizes="256x256" href="/assets/logos/favicon/favicon_256.png" />
</head>

<body lang="{{ currentLang }}" id="top">
  {% include "header.njk" %}
  <div class="nav-backdrop" aria-hidden="true"></div>
  <div class="app-shell">
    <aside class="app-shell__sidebar" id="sidebar">
      <div class="rail rail--sidebar">
        {% include "sidebar.njk" %}
      </div>
    </aside>
    <main class="app-shell__content" id="page">
      {{ content | safe }}
    </main>
    <aside class="app-shell__toc">
      <div class="rail rail--toc">
        {% include "toc.njk" %}
      </div>
    </aside>
  </div>
  <script type="module" src="/assets/js/app.js"></script>
</body>

</html>
